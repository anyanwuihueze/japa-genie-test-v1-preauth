'use client';

import React, { useEffect } from 'react';
import { useDashboardData } from '@/hooks/use-dashboard-data';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Badge } from '@/components/ui/badge';
import { Progress } from '@/components/ui/progress';
import { User, MapPin, Flag, FileText, CheckCircle, AlertCircle } from 'lucide-react';
import Link from 'next/link';
import { useIsMobile } from '@/hooks/use-mobile';

interface EnhancedProfileCardProps {
  className?: string;
  onProfileUpdate?: () => void;
}

export function EnhancedProfileCard({ className, onProfileUpdate }: EnhancedProfileCardProps) {
  const isMobile = useIsMobile();
  const dashboardData = useDashboardData();
  
  // DEBUG: Log ALL profile data to console
  useEffect(() => {
    console.log('üö® PROFILE DEBUG - FULL DATA:', {
      hasProfile: !!dashboardData.userProfile,
      loading: dashboardData.loading,
      error: dashboardData.error,
      userId: dashboardData.userId,
      profileData: dashboardData.userProfile,
      destination: dashboardData.userProfile?.destination_country,
      visaType: dashboardData.userProfile?.visa_type,
      country: dashboardData.userProfile?.country,
      allKeys: dashboardData.userProfile ? Object.keys(dashboardData.userProfile) : []
    });
  }, [dashboardData]);

  // CRITICAL FIELDS ONLY
  const requiredFields = ['destination_country', 'visa_type'];
  const filledFields = requiredFields.filter(field => 
    dashboardData.userProfile && 
    dashboardData.userProfile[field] && 
    dashboardData.userProfile[field].toString().trim() !== ''
  ).length;
  
  const profileComplete = requiredFields.length > 0 ? (filledFields / requiredFields.length) * 100 : 0;

  // Show EXACTLY what's missing
  const missingFields = requiredFields.filter(field => 
    !dashboardData.userProfile || 
    !dashboardData.userProfile[field] || 
    dashboardData.userProfile[field].toString().trim() === ''
  );
  
  const missingText = missingFields.length > 0 
    ? `Missing: ${missingFields.map(f => f.replace('_', ' ')).join(', ')}`
    : 'All required fields complete';

  if (dashboardData.loading) {
    return (
      <Card className={`${className} ${isMobile ? 'p-4' : 'p-6'}`}>
        <CardHeader>
          <div className="h-6 bg-gray-200 rounded w-48 animate-pulse" />
        </CardHeader>
        <CardContent>
          <div className="space-y-3">
            {[...Array(3)].map((_, i) => (
              <div key={i} className="flex justify-between">
                <div className="h-4 bg-gray-200 rounded w-32 animate-pulse" />
                <div className="h-4 bg-gray-200 rounded w-24 animate-pulse" />
              </div>
            ))}
          </div>
        </CardContent>
      </Card>
    );
  }

  if (dashboardData.error) {
    return (
      <Card className={`${className} ${isMobile ? 'p-4' : 'p-6'}`}>
        <CardContent className="text-center py-8 text-red-500">
          Error loading profile data: {dashboardData.error}
        </CardContent>
      </Card>
    );
  }

  return (
    <Card className={`${className} ${isMobile ? 'shadow-sm' : 'shadow-lg'}`}>
      <CardHeader className={`${isMobile ? 'p-4' : 'p-6'}`}>
        <CardTitle className={`${isMobile ? 'text-lg' : 'text-xl'} flex items-center gap-2`}>
          <User className="w-5 h-5" />
          Your Profile
          <Badge variant="outline" className="text-xs bg-blue-50">
            Debug Mode
          </Badge>
        </CardTitle>
        <div className={`flex justify-between items-center ${isMobile ? 'text-sm' : 'text-base'}`}>
          <span className="text-muted-foreground">Completion</span>
          <Badge variant="outline" className={profileComplete === 100 ? 'bg-green-50' : 'bg-yellow-50'}>
            {Math.round(profileComplete)}% ({filledFields}/{requiredFields.length})
          </Badge>
        </div>
      </CardHeader>
      <CardContent className={`${isMobile ? 'p-4' : 'p-6'} pt-0`}>
        <div className="space-y-4">
          <Progress value={profileComplete} className="w-full h-2" />

          {/* DEBUG PANEL */}
          <div className="p-3 bg-blue-50 border border-blue-200 rounded-lg">
            <div className="font-medium text-blue-900 mb-1">üîç Debug Information:</div>
            <div className="text-sm text-blue-700 space-y-1">
              <div>User ID: {dashboardData.userId || 'Not found'}</div>
              <div>Destination: <strong>{dashboardData.userProfile?.destination_country || 'NULL'}</strong></div>
              <div>Visa Type: <strong>{dashboardData.userProfile?.visa_type || 'NULL'}</strong></div>
              <div>Missing: <strong>{missingText}</strong></div>
              <div>Total Fields: {dashboardData.userProfile ? Object.keys(dashboardData.userProfile).length : 0}</div>
            </div>
          </div>

          <div className="space-y-3">
            <ProfileItem
              icon={<Flag className="w-4 h-4" />}
              label="Destination*"
              value={dashboardData.userProfile?.destination_country || 'Not set'}
              isComplete={!!dashboardData.userProfile?.destination_country}
              isMobile={isMobile}
            />
            <ProfileItem
              icon={<FileText className="w-4 h-4" />}
              label="Visa Type*"
              value={dashboardData.userProfile?.visa_type ? formatVisaType(dashboardData.userProfile.visa_type) : 'Not set'}
              isComplete={!!dashboardData.userProfile?.visa_type}
              isMobile={isMobile}
            />
            <ProfileItem
              icon={<MapPin className="w-4 h-4" />}
              label="From"
              value={dashboardData.userProfile?.country || 'Not set'}
              isComplete={!!dashboardData.userProfile?.country}
              isMobile={isMobile}
            />
          </div>

          {profileComplete === 100 ? (
            <div className="p-4 bg-green-50 rounded-lg border border-green-200">
              <div className="flex items-center gap-3">
                <CheckCircle className="w-5 h-5 text-green-600" />
                <div>
                  <p className="font-medium text-green-900">Profile Complete!</p>
                  <p className="text-green-700 text-sm">
                    All required information provided
                  </p>
                </div>
              </div>
            </div>
          ) : (
            <div className="p-4 bg-yellow-50 rounded-lg border border-yellow-200">
              <div className="flex items-start gap-3">
                <AlertCircle className="w-5 h-5 text-yellow-600 mt-0.5" />
                <div>
                  <p className="font-medium text-yellow-900">
                    {requiredFields.length - filledFields} required {requiredFields.length - filledFields === 1 ? 'field' : 'fields'} remaining
                  </p>
                  <p className="text-yellow-700 text-sm">
                    {missingText}
                  </p>
                </div>
              </div>
            </div>
          )}

          <Button asChild className="w-full" onClick={onProfileUpdate}>
            <Link href="/kyc-profile">
              {profileComplete === 100 ? 'Update Profile' : 'Complete Profile'}
            </Link>
          </Button>
        </div>
      </CardContent>
    </Card>
  );
}

function ProfileItem({ 
  icon, 
  label, 
  value, 
  isComplete,
  isMobile
}: { 
  icon: React.ReactNode; 
  label: string; 
  value: string;
  isComplete: boolean;
  isMobile: boolean;
}) {
  return (
    <div className="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
      <div className="flex items-center gap-3">
        {icon}
        <span className={`font-medium ${isMobile ? 'text-sm' : 'text-base'}`}>
          {label}
        </span>
      </div>
      <div className="flex items-center gap-2">
        <span className={`${isMobile ? 'text-sm' : 'text-base'} ${value === 'Not set' ? 'text-muted-foreground' : 'text-gray-900'}`}>
          {value}
        </span>
        {isComplete ? (
          <CheckCircle className="w-4 h-4 text-green-500" />
        ) : (
          <AlertCircle className="w-4 h-4 text-yellow-500" />
        )}
      </div>
    </div>
  );
}

function formatVisaType(type: string): string {
  const types: Record<string, string> = {
    'student': 'Student Visa',
    'work': 'Work Visa',
    'tourist': 'Tourist Visa',
    'business': 'Business Visa',
    'family': 'Family Visa'
  };
  return types[type] || type.charAt(0).toUpperCase() + type.slice(1);
}
