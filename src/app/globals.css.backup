/* Tailwind directives */
@import 'tailwindcss/base';
@import 'tailwindcss/components';
@import 'tailwindcss/utilities';

/* ============================================= */
/* ANIMATIONS & STYLES */
/* ============================================= */

/* Ticker animation */
@keyframes ticker {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}

/* NEW: Pointing from left animation */
@keyframes pointFromLeft {
  0% {
    opacity: 0;
    transform: translateX(-50px) scale(0.8);
  }
  70% {
    opacity: 1;
    transform: translateX(10px) scale(1.1);
  }
  100% {
    opacity: 1;
    transform: translateX(0) scale(1);
  }
}

/* Glow animation for buttons - FIXED VERSION */
@keyframes glow {
  0%, 100% {
    filter: drop-shadow(0 0 8px hsl(var(--primary))) drop-shadow(0 0 12px hsl(var(--primary)));
  }
  50% {
    filter: drop-shadow(0 0 16px hsl(var(--primary))) drop-shadow(0 0 24px hsl(var(--primary)));
  }
}

/* Animation classes */
.animate-ticker {
  animation: ticker 46s linear infinite; /* Restored longer duration */
  display: flex;
  width: max-content;
}

.animate-glow {
  animation: glow 2.5s ease-in-out infinite;
  position: relative;
}

.animate-pointFromLeft {
  animation: pointFromLeft 1.2s cubic-bezier(0.25, 1, 0.5, 1) 0.5s forwards;
  opacity: 0; /* Start hidden */
}

/* Ticker container */
.ticker-container {
  overflow: hidden;
  position: relative;
  width: 100%;
}

/* Fix line-clamp warning */
.line-clamp-2 {
  line-clamp: 2;
  -webkit-line-clamp: 2;
}

/* ============================================= */
/* PWA OPTIMIZATIONS - SAFE VERSION */
/* ============================================= */

/* Prevent zoom on mobile */
html {
  -webkit-text-size-adjust: 100%;
  text-size-adjust: 100%;
  touch-action: manipulation;
}

body {
  background-color: white !important;
  -webkit-overflow-scrolling: touch;
  overflow-x: hidden !important; /* Prevent horizontal scroll ONLY */
}

/* Remove tap highlight */
* {
  -webkit-tap-highlight-color: transparent;
  -webkit-touch-callout: none;
}

/* Proper touch targets */
button, a, [role="button"] {
  min-height: 44px;
  min-width: 44px;
  touch-action: manipulation;
}

/* Button active states for native feel */
button:active, a:active, [role="button"]:active {
  opacity: 0.7;
  transform: translateY(1px);
}

/* Prevent text selection except content */
button, a, [role="button"] {
  -webkit-user-select: none;
  user-select: none;
}

input, textarea, [contenteditable] {
  user-select: text;
  -webkit-user-select: text;
}

/* Force 16px to prevent iOS zoom */
input, select, textarea {
  font-size: 16px !important;
}

/* Fix iOS 100vh issue */
@supports (-webkit-touch-callout: none) {
  .min-h-screen {
    min-height: -webkit-fill-available !important;
  }
}

/* Mobile-specific */
@media (max-width: 768px) {
  html {
    font-size: 16px !important;
  }
  
  body {
    overflow-x: hidden !important;
  }
  
  /* Prevent horizontal scroll */
  * {
    max-width: 100vw !important;
  }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
  .animate-chevron-pulse,
  .animate-glow,
  .animate-ticker {
    animation: none !important;
  }
}

/* ============================================= */
/* CHEVRON PULSE ANIMATION - ENHANCED WITH GLOW */
/* ============================================= */

@keyframes chevron-pulse {
  0% {
    opacity: 0.3;
    transform: translateX(-4px);
    filter: drop-shadow(0 0 2px hsl(var(--primary)));
  }
  50% {
    opacity: 1;
    transform: translateX(8px);
    filter: drop-shadow(0 0 8px hsl(var(--primary))) drop-shadow(0 0 12px hsl(var(--primary)));
  }
  100% {
    opacity: 0.3;
    transform: translateX(-4px);
    filter: drop-shadow(0 0 2px hsl(var(--primary)));
  }
}

.animate-chevron-pulse {
  animation: chevron-pulse 1.5s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

