              <CardTitle className="text-2xl">üåç Alternative Destinations</CardTitle>
              <CardDescription className="text-base">
                Countries with higher eligibility scores based on your profile
              </CardDescription>
            </CardHeader>
            
            <CardContent className="p-6 sm:p-8">
              <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                {data.aiResults.alternativeDestinations.map((dest, index) => (
                  <Card key={index} className="border-2 hover:border-purple-300 transition-colors">
                    <CardContent className="p-6 text-center space-y-3">
                      <div className="text-3xl font-bold text-gray-900">{dest.country}</div>
                      
                      <div className={`inline-block px-4 py-2 rounded-full text-lg font-semibold ${getScoreBg(dest.score)} ${getScoreColor(dest.score)}`}>
                        {dest.score}% Match
                      </div>
                      
                      <p className="text-sm text-gray-700 leading-relaxed">{dest.reason}</p>
                      
                      <Button 
                        variant="outline" 
                        className="w-full border-2 border-purple-300 hover:bg-purple-50"
                        onClick={() => {
                          // Navigate to new check with pre-filled destination
